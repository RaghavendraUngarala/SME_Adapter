@inherits LayoutComponentBase


<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>


<MudLayout>
    <MudAppBar style="background-color :  #00796B" Elevation="3">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Size = "Size.Large" Edge="Edge.Start" OnClick="@DrawerToggle" />
        <img src="images/SME Adapter_Logo.png" alt="Logo" style="height:60px; width:auto; margin-left: 16px; margin-right:16px;" />
        <MudText Typo="Typo.h3" Class="appbar-title">SME Adapter</MudText>      
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Width="250px" Elevation="4">
        <NavMenu/>
    </MudDrawer>
    
    
    <MudMainContent>
        @Body
    </MudMainContent>
   
    
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
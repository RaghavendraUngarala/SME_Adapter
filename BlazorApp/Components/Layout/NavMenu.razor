
<MudAppBar Color="Color.Secondary" Elevation="2">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@DrawerToggle" />
    <MudText Typo="Typo.h6" Class="px-4">Navigation Menu</MudText>
</MudAppBar>
   
<MudNavMenu>
    <MudNavLink Href="/"  Match="NavLinkMatch.All" >
        <div style="display: flex; align-items: center; gap: 10px;">
            <MudIcon Icon="@Icons.Material.Filled.Home" Size="Size.Large" />
            <span class="nav-menu-text">Home</span>
        </div>
    </MudNavLink>
    <MudNavLink Href="/viewproducts" Match="NavLinkMatch.All">
        <div style="display: flex; align-items: center; gap: 10px;">
            <MudIcon Icon="@Icons.Material.Filled.ShoppingCart" Size="Size.Large" />
            <span class="nav-menu-text">View Products</span>
        </div>
    </MudNavLink>
    <MudNavLink Href="/testpage" Match="NavLinkMatch.All">
        <div style="display: flex; align-items: center; gap: 10px;">
            <MudIcon Icon="@Icons.Material.Filled.Build" Size="Size.Large" />
            <span class="nav-menu-text">Test pages</span>
        </div>
    </MudNavLink>
</MudNavMenu>
    
@code {
    [Parameter]
    public EventCallback DrawerToggle { get; set; }
}


<MudDialog>
    <TitleContent>
        <MudText Typo = "Typo.h5">
            Delete Products
        </MudText>
        
    </TitleContent>

    <DialogContent>
        <MudText Typo="Typo.h6">
            Are you sure you want to delete @Count products?
        </MudText>
        <MudText Typo="Typo.h6" Class="mt-2 text-secondary">
            This action cannot be undone.
        </MudText>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Error" Size="Size.Large" OnClick="@(() => MudDialog.Close(DialogResult.Ok(true)))">
            Yes, Delete
        </MudButton>

        <MudButton Color="Color.Secondary" OnClick="@(() => MudDialog.Cancel())">
            Cancel
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public int Count { get; set; }
}


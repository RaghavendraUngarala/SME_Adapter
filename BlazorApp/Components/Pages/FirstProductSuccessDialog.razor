@inject NavigationManager NavManager
@inject IDialogService DialogService
<MudDialog Style="padding: 0;">

    <!-- Header -->
    <TitleContent>
        <MudStack AlignItems="AlignItems.Center" Spacing="1">
            <MudIcon Icon="@Icons.Material.Filled.CheckCircle"
                     Color="Color.Success"
                     Size="Size.Large" />
            <MudText Typo="Typo.h4" Class="mt-1">
                Congratulations!
            </MudText>
        </MudStack>
    </TitleContent>

    <!-- Body -->
    <DialogContent>
        <MudStack AlignItems="AlignItems.Center" Spacing="2" Class="pa-4">

            <MudText Typo="Typo.h6" Align="Align.Center">
                🎉 You have successfully added your first product!
            </MudText>

            <MudPaper Elevation="0" Class="pa-2" Style="text-align:center;">
                <MudText Typo="Typo.body1" Color="Color.Secondary">
                    You can now continue building your product catalog.
                </MudText>
            </MudPaper>

        </MudStack>
    </DialogContent>

    <!-- Actions -->
    <DialogActions >
        <div Class="justify-center pa-4">
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   OnClick="ViewProducts"
                   Class="mx-2"
                   StartIcon="@Icons.Material.Filled.Visibility"
                   Style="min-width: 220px;">
            View Products
        </MudButton>

        <MudButton Variant="Variant.Outlined"
                   Color="Color.Secondary"
                   OnClick="CloseDialog"
                   Class="mx-2"
                   Style="min-width: 150px;">
            Close
        </MudButton>
        </div>
    </DialogActions>
    
</MudDialog>

@code {
    // Required: dialog instance is passed automatically
    [CascadingParameter] 
    private IMudDialogInstance MudDialog { get; set; }

    

    private void ViewProducts()
    {
        MudDialog.Close(DialogResult.Ok(true)); // closes the dialog
        NavManager.NavigateTo("/viewproducts");     // go to products page
    }

    private void CloseDialog()
    {
        MudDialog.Cancel(); // just closes without action
        NavManager.NavigateTo("/viewproducts");
    }
}

